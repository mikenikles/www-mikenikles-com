{
  "name": "website",
  "description": "The website source code for www.mikenikles.com",
  "version": "1.0.0",
  "scripts": {
    "clean": "rm -fr __sapper__ && rm -fr ./firebase/public/*",
    "deploy": "run-s setActiveEnv deploy:firebase",
    "deploy:firebase": "npm run export && cd firebase && firebase deploy -m \"${DEPLOYMENT_VERSION}\" --token ${FIREBASE_DEPLOY_TOKEN}",
    "dev": "sapper dev",
    "dev:firebase": "run-s clean export && cd firebase && firebase emulators:start",
    "export": "sapper export ./firebase/public --legacy",
    "fetchBlogPosts": "curl \"https://blog.mikenikles.com/ghost/api/v3/content/posts/?key=5581c10aee9e1a44e3bfc012f7&include=authors,tags\" > ./src/routes/blog/_posts.json",
    "setActiveEnv": "echo \"export default '$DEPLOYMENT_ENV';\" > ./src/config/active-env.js",
    "preexport": "run-s clean fetchBlogPosts",
    "test": "run-p --race dev cy:run",
    "cy:run": "cypress run",
    "cy:open": "cypress open"
  },
  "dependencies": {
    "@tryghost/content-api": "^1.3.3",
    "compression": "^1.7.1",
    "luxon": "^1.21.1",
    "polka": "next",
    "sirv": "^0.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "@pyoner/svelte-ts-preprocess": "^1.2.1",
    "@types/express": "^4.17.2",
    "@types/luxon": "^1.21.0",
    "firebase-tools": "^7.11.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.21",
    "postcss-cli": "^6.1.3",
    "postcss-load-config": "^2.1.0",
    "rollup": "^1.12.0",
    "rollup-plugin-babel": "^4.0.2",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-svelte": "^5.0.1",
    "rollup-plugin-terser": "^4.0.4",
    "rollup-plugin-typescript2": "^0.25.3",
    "sapper": "^0.27.0",
    "svelte": "^3.0.0",
    "svelte-preprocess": "^3.2.6",
    "tailwindcss": "^1.1.3"
  }
}
